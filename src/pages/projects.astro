---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Footer from '../components/Footer.astro';
import { projects } from '../data/projects';
---

<Layout title="Proyectos - Julio Martínez" description="Portfolio de proyectos de machine learning, análisis de datos y visualización">
  <Header />
  
  <main>
    <section class="section" style="padding-top: 120px;">
      <div class="container">
        <div class="section-title">
          <h1>Mis Proyectos</h1>
          <p class="section-subtitle">Una colección de proyectos que demuestran mis habilidades en data science</p>
        </div>
        
        <div class="projects-grid">
          {projects.map(project => (
            <ProjectCard project={project} />
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  @import '../styles/main.css';
</style>
