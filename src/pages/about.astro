---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Skills from '../components/Skills.astro';
import Footer from '../components/Footer.astro';
import { profile } from '../data/profile';
---

<Layout title="Sobre Mí - Julio Martínez" description="Conoce más sobre mi experiencia, habilidades y pasión por la administración de empresas">
  <Header />
  
  <main>
    <section class="about-hero">
      <div class="about-container">
        <div class="about-header">
          <h1>Sobre Mí</h1>
          <p class="about-subtitle">Administrador de Empresas especializado en optimización de procesos y liderazgo de equipos</p>
        </div>
        
        <div class="about-content">
          <div class="about-profile">
            <div class="profile-image">
              <img 
                src={profile.avatar} 
                alt={`${profile.name} - ${profile.role}`}
                class="avatar-image"
                loading="lazy"
              />
            </div>
            
            <div class="profile-info">
              <h2>¿Quién soy?</h2>
              <p class="bio-text">{profile.bio}</p>
              
              <div class="contact-info">
                <div class="info-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  <span>{profile.location}</span>
                </div>
                <div class="info-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                    <polyline points="22,6 12,13 2,6"/>
                  </svg>
                  <a href={`mailto:${profile.email}`}>{profile.email}</a>
                </div>
                <div class="info-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12,6 12,12 16,14"/>
                  </svg>
                  <span>{profile.stats.experience} años de experiencia</span>
                </div>
              </div>
              
              <div class="cta-section">
                <a href={profile.resume} class="btn btn-primary" target="_blank" rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14,2 14,8 20,8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10,9 9,9 8,9"/>
                  </svg>
                  Descargar CV
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="approach-section">
          <h2>Mi Enfoque Profesional</h2>
          <p class="approach-text">
            Me especializo en la optimización de procesos empresariales y el liderazgo de equipos de alto rendimiento. 
            Mi enfoque se centra en la mejora continua, la eficiencia operativa y la implementación de soluciones 
            basadas en datos para la toma de decisiones estratégicas.
          </p>
        </div>
        
        <div class="expertise-grid">
          <div class="expertise-card">
            <div class="expertise-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <h3>Gestión Operativa</h3>
            <p>Optimización de procesos y coordinación de equipos para maximizar la eficiencia organizacional</p>
          </div>
          
          <div class="expertise-card">
            <div class="expertise-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3>Control Administrativo</h3>
            <p>Implementación de sistemas de auditoría y control para asegurar el cumplimiento normativo</p>
          </div>
          
          <div class="expertise-card">
            <div class="expertise-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
            <h3>Liderazgo de Equipos</h3>
            <p>Desarrollo y motivación de equipos de trabajo para alcanzar objetivos estratégicos</p>
          </div>
        </div>
      </div>
    </section>
    
    <Skills />
  </main>
  
  <Footer />
</Layout>

<style>
  @import '../styles/main.css';
  
  .about-hero {
    padding: var(--spacing-20) 0;
    background: linear-gradient(135deg, var(--color-light) 0%, var(--color-gray-50) 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  
  .about-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-6);
  }
  
  .about-header {
    text-align: center;
    margin-bottom: var(--spacing-16);
  }
  
  .about-header h1 {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    color: var(--color-dark);
    margin-bottom: var(--spacing-4);
  }
  
  .about-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .about-content {
    margin-bottom: var(--spacing-20);
  }
  
  .about-profile {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--spacing-8);
    align-items: start;
    background: white;
    padding: var(--spacing-8);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-gray-100);
  }
  
  .profile-image {
    position: relative;
  }
  
  .avatar-image {
    width: 180px;
    height: 180px;
    border-radius: var(--radius-2xl);
    object-fit: cover;
    box-shadow: var(--shadow-md);
  }
  
  .profile-info h2 {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--spacing-4);
  }
  
  .bio-text {
    font-size: var(--font-size-base);
    color: var(--color-gray-700);
    line-height: 1.7;
    margin-bottom: var(--spacing-6);
  }
  
  .contact-info {
    margin-bottom: var(--spacing-8);
  }
  
  .info-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    margin-bottom: var(--spacing-3);
    color: var(--color-gray-600);
    font-size: var(--font-size-sm);
  }
  
  .info-item svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }
  
  .info-item a {
    color: var(--color-primary);
    text-decoration: none;
    transition: var(--transition-normal);
  }
  
  .info-item a:hover {
    color: var(--color-accent);
  }
  
  .approach-section {
    text-align: center;
    margin-bottom: var(--spacing-16);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .approach-section h2 {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: var(--spacing-6);
  }
  
  .approach-text {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    line-height: 1.7;
  }
  
  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-6);
    max-width: 900px;
    margin: 0 auto;
  }
  
  .expertise-card {
    background: white;
    padding: var(--spacing-6);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-gray-100);
    text-align: center;
    transition: var(--transition-normal);
  }
  
  .expertise-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .expertise-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--spacing-4);
    color: white;
  }
  
  .expertise-card h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: var(--spacing-3);
  }
  
  .expertise-card p {
    color: var(--color-gray-600);
    line-height: 1.6;
    font-size: var(--font-size-sm);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .about-hero {
      padding: var(--spacing-16) 0;
      min-height: auto;
    }
    
    .about-container {
      padding: 0 var(--spacing-4);
    }
    
    .about-header h1 {
      font-size: var(--font-size-3xl);
    }
    
    .about-subtitle {
      font-size: var(--font-size-base);
    }
    
    .about-profile {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--spacing-6);
      padding: var(--spacing-6);
    }
    
    .avatar-image {
      width: 150px;
      height: 150px;
      margin: 0 auto;
    }
    
    .approach-section h2 {
      font-size: var(--font-size-2xl);
    }
    
    .approach-text {
      font-size: var(--font-size-base);
    }
    
    .expertise-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-4);
    }
    
    .expertise-card {
      padding: var(--spacing-4);
    }
  }
  
  @media (max-width: 480px) {
    .about-container {
      max-width: 100%;
    }
    
    .about-profile {
      padding: var(--spacing-4);
    }
    
    .avatar-image {
      width: 120px;
      height: 120px;
    }
  }
</style>
