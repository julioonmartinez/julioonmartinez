---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Experience from '../components/Experience.astro';
import Skills from '../components/Skills.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Footer from '../components/Footer.astro';
import { projects } from '../data/projects';
import '../styles/main.css';
// Mostrar solo los primeros 3 proyectos en la página principal
const featuredProjects = projects.slice(0, 3);
---

<Layout 
  title="Julio Martínez - Data Analyst & Business Intelligence" 
  description="Data Analyst & BI Specialist. Passionate about transforming data into business strategy and optimizing processes."
>
  <Header />
  <main>
    <Hero />
    <Experience />
    
    
    <section class="section">
      <div class="container">
        <div class="section-title">
          <h2>Featured Projects</h2>
          <p class="section-subtitle">
            Some of my most recent work in analysis, visualization, and Business Intelligence
          </p>
        </div>
        
        <div class="projects-grid">
          {featuredProjects.map(project => (
            <ProjectCard project={project} />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/projects" class="btn btn-outline">
            View All Projects
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <Skills />
  </main>
  
  <Footer />
</Layout>


