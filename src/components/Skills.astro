---
import { profile } from '../data/profile';
---

<section class="skills-section section">
  <div class="container">
    <div class="section-title">
      <h2>Skills and Competencies</h2>
      <p class="section-subtitle">Technologies and tools I master</p>
    </div>
    
    <div class="skills-grid">
      <div class="skills-category fade-in">
        <h3 class="category-title">Technical</h3>
        <div class="skills-list">
          {profile.skills.technical.map(skill => (
            <div class="skill-item">
              <span class="skill-name">{skill}</span>
              <span class="skill-level">Advanced</span>
            </div>
          ))}
        </div>
      </div>
      
      <div class="skills-category fade-in">
        <h3 class="category-title">Tools</h3>
        <div class="skills-list">
          {profile.skills.tools.map(skill => (
            <div class="skill-item">
              <span class="skill-name">{skill}</span>
              <span class="skill-level">Expert</span>
            </div>
          ))}
        </div>
      </div>
      
      <div class="skills-category fade-in">
        <h3 class="category-title">Soft Skills</h3>
        <div class="skills-list">
          {profile.skills.soft.map(skill => (
            <div class="skill-item">
              <span class="skill-name">{skill}</span>
              <span class="skill-level">Excellent</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<section class="stats-section">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-item fade-in">
        <span class="stat-number">{profile.stats.projects}</span>
        <span class="stat-label">Completed Projects</span>
      </div>
      
      <div class="stat-item fade-in">
        <span class="stat-number">{profile.stats.experience}</span>
        <span class="stat-label">Years of Experience</span>
      </div>
      
      <div class="stat-item fade-in">
        <span class="stat-number">{profile.stats.skills}</span>
        <span class="stat-label">Technical Skills</span>
      </div>
      
      <div class="stat-item fade-in">
        <span class="stat-number">{profile.stats.certifications}</span>
        <span class="stat-label">Certifications</span>
      </div>
    </div>
  </div>
</section>

<style>
  @import '../styles/components/skills.css';
</style>
