---
import { profile } from '../data/profile';
import '../styles/components/hero.css';
---

<section class="hero">
  <div class="container">
    <div class="hero-container">
      <div class="hero-content">
        <div class="hero-image">
          <img 
            src={profile.avatar} 
            alt={`${profile.name} - ${profile.role}`}
            class="avatar"
            loading="eager"
          />
          <div class="availability-badge">
            <svg width="8" height="8" viewBox="0 0 8 8" fill="none">
              <circle cx="4" cy="4" r="4" fill="#10B981"/>
            </svg>
            Disponible para trabajar
          </div>
        </div>
        
        
        <h1 class="hero-title">{profile.name}</h1>
        <h2 class="hero-role">{profile.role}</h2>
        <p class="hero-tagline">{profile.tagline}</p>
        <p class="hero-description">{profile.bio}</p>
        <div class="hero-buttons">
          <a href={profile.resume} class="btn btn-primary" target="_blank" rel="noopener">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14,2 14,8 20,8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10,9 9,9 8,9"/>
            </svg>
            Descargar CV
          </a>
          <a href={profile.social.linkedin} class="btn btn-secondary" target="_blank" rel="noopener">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
              <rect x="2" y="9" width="4" height="12"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
      
      
    </div>
  </div>
</section>


